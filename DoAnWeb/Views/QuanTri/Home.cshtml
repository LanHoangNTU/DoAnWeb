
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .truck {
        padding: 20px 5px 20px 10px;
    }

    .dash-icon {
        font-size: 7rem;
    }

    .truck .dash-item, .dash-item-2, .dash-item-3 {
        min-height: 100px;
        max-height: 100px;
        box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14),0 3px 1px -2px rgba(0,0,0,0.12),0 1px 5px 0 rgba(0,0,0,0.2);
        margin: 0 20px 0 10px;
        color: #fff;
        transition: 0.3s;
        padding: 0;
    }

    .dash-item .header {
        background-color: #424242;
        height: 100px;
    }

    .dash-item-2 .header {
        background-color: #34bf19;
        height: 100px;
    }

    .dash-item-3 .header {
        background-color: #d72525;
        height: 100px;
    }

    .dash-item:hover, .dash-item-2:hover, .dash-item-3:hover {
        cursor: pointer;
        opacity: 0.6;
    }

        .body {
            color: #000;
        }

        h2{
            text-align: center;
        }
</style>
<div class="row center truck">
    <div class="col-lg-4 row dash-item"
         onclick="location.href = '@Url.Action("Index", "QuanTri")'">
        <div class="col-lg-4 header center">
            <i class="fa fa-laptop dash-icon"></i>
        </div>
        <div class="col-lg-8 body center">
            <h2>Mặt hàng</h2>
        </div>
    </div>
    <div class="col-lg-4 row dash-item-2"
         onclick="location.href = '@Url.Action("Index", "GIOHANGs")'">
        <div class="col-lg-4 header center">
            <i class="fa fa-cart-arrow-down dash-icon"></i>
        </div>
        <div class="col-lg-8 body center">
            <h2>Giỏ hàng</h2>
        </div>
    </div>
    <div class="col-lg-4 row dash-item-3"
         onclick="location.href='@Url.Action("Bills", "QuanTri")'">
        <div class="col-lg-4 header center">
            <i class="fa fa-sign-out dash-icon"></i>
        </div>
        <div class="col-lg-8 body center">
            <h2>Đăng xuất</h2>
        </div>
    </div>
</div>

<div class="row center truck">
    <div class="col-lg-4 row dash-item"
         onclick="location.href='@Url.Action("Index", "LOAIMATHANGs")'">
        <div class="col-lg-4 header center">
            <i class="fa fa-cubes dash-icon"></i>
        </div>
        <div class="col-lg-8 body center">
            <h2>Loại mặt hàng</h2>
        </div>
    </div>
    <div class="col-lg-4 row dash-item-2"
         onclick="location.href = '@Url.Action("Bills", "QuanTri")'">
        <div class="col-lg-4 header center">
            <i class="fa fa-shopping-bag dash-icon"></i>
        </div>
        <div class="col-lg-8 body center">
            <h2>Xác nhận giao hàng</h2>
        </div>
    </div>
    <div class="col-lg-4 row dash-item-3"
         onclick="location.href='@Url.Action("Summary", "QuanTri")'">
        <div class="col-lg-4 header center">
            <i class="fa fa-line-chart dash-icon"></i>
        </div>
        <div class="col-lg-8 body center">
            <h2>Thống kê</h2>
        </div>
    </div>
</div>

<div class="row center truck">
    <div class="col-lg-4 row dash-item">
        <div class="col-lg-4 header center"
             onclick="location.href='@Url.Action("Index", "NHASANXUATs")'">
            <i class="fa fa-black-tie dash-icon"></i>
        </div>
        <div class="col-lg-8 body center">
            <h2>Nhà sản xuất</h2>
        </div>
    </div>
    <div class="col-lg-4 row dash-item-2"
         onclick="location.href = '@Url.Action("Index", "THANHPHOes")'">
        <div class="col-lg-4 header center">
            <i class="fa fa-truck dash-icon"></i>
        </div>
        <div class="col-lg-8 body center">
            <h2>Khu vực giao hàng</h2>
        </div>
    </div>
</div>