@model PagedList.IPagedList<DoAnWeb.Models.LOAIMATHANG>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .id{
        color: red;
    }
</style>
<div id="header" class="row full-width">
    <div class="col-lg-4">
        <h2 style="margin: 0;">LOẠI MẶT HÀNG</h2>
    </div>
    <div class="col-lg-8">
        @using (Html.BeginForm("Index", "LOAIMATHANGs", FormMethod.Get))
        {
            <div class="input-group" style="display: inline-block">
                <input type="text" class="form-control" name="name" value="@ViewBag.NAME" style="max-width: 200px;" placeholder="Tìm kiếm tên loại..."/>
                <div class="input-group-btn" style="display: inline-block">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
            </div>
        }
    </div>
</div>
<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th class="item-1">Mã</th>
                <th class="item-2">Tên loại</th>
                <th class="item-3"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><a href="@Url.Action("Details", "LOAIMATHANGs", new { id = item.MALOAI})"><b class="id">#@item.MALOAI</b></a></td>
                    <td><a href="@Url.Action("Details", "LOAIMATHANGs", new { id = item.MALOAI})"><b>@item.TENLOAI</b></a></td>
                    <td><a href="@Url.Action("Edit", "LOAIMATHANGs", new { id = item.MALOAI})">Sửa</a></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="100" style="text-align: center; padding: 0;">@Html.PagedListPager(Model, page => Url.Action("Index", "LOAIMATHANGs", new { page, name = ViewBag.NAME }))</td>
            </tr>
        </tfoot>
    </table>
    <div id="create" class="btn-group">
        <button class="btn btn-success"
                onclick="location.href = '@Url.Action("Create", "LOAIMATHANGs")'">
            Thêm loại mặt hàng
        </button>
        <button class="btn btn-success"
                onclick="location.href = '@Url.Action("Create", "LOAIMATHANGs")'">
            <i class="glyphicon glyphicon-plus"></i>
        </button>
    </div>
    <a href="@Url.Action("Create", "LOAIMATHANGs")" class="float">
        <i class="fa fa-plus my-float"></i>
    </a>
    <div class="label-container">
        <div class="label-text">Thêm loại mặt hàng</div>
        <i class="fa fa-play label-arrow"></i>
    </div>

</div>
